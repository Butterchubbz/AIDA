{
  "name": "aida-pb-frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.5.1",
    "pocketbase": "^0.21.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3",
    "recharts": "^2.12.2"
  },
  "scripts": {
    "start": "npx vite --open /control-panel",
    "build": "npx vite build",
    "build:electron": "npm run build && electron-builder",
    "preview": "vite preview",
    "pb:win": ".\\pocketbase.exe serve --hooksDir=pb_hooks",
    "pb:unix": "./pocketbase serve --hooksDir=pb_hooks",
    "dev:win": "npx concurrently -k \"npm:pb:win\" \"npm:start\"",
    "dev:unix": "npx concurrently -k \"npm:pb:unix\" \"npm:start\""
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "electron": "^29.1.5",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.1",
    "vite": "^5.0.12",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.aida.controlpanel",
    "productName": "AIDA Control Panel",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "pb_hooks/**/*",
      "pocketbase.exe"
    ],
    "win": {
      "target": "portable",
      "icon": "assets/icon.ico"
    }
  }
}